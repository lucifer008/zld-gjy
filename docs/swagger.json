{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/auths/login": {
            "post": {
                "description": "登录",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "认证"
                ],
                "summary": "登录接口",
                "parameters": [
                    {
                        "description": "登录参数",
                        "name": "user",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.LoginUsers"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/users/getUsers": {
            "get": {
                "description": "根据用户ID获取用户信息",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "用户"
                ],
                "summary": "获取用户信息",
                "parameters": [
                    {
                        "type": "string",
                        "default": "1",
                        "description": "登录参数",
                        "name": "userId",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.UsersInfo"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.LoginUsers": {
            "type": "object",
            "properties": {
                "password": {
                    "description": "密码",
                    "type": "string",
                    "example": "wxllx@124343.com"
                },
                "username": {
                    "description": "用户名",
                    "type": "string",
                    "example": "zhangsan"
                }
            }
        },
        "models.UsersInfo": {
            "type": "object",
            "properties": {
                "empName": {
                    "description": "雇员名称",
                    "type": "string"
                },
                "empNo": {
                    "description": "雇员编号",
                    "type": "string"
                },
                "userEmail": {
                    "description": "用户游戏",
                    "type": "string"
                },
                "userId": {
                    "description": "用户Id",
                    "type": "integer"
                },
                "userName": {
                    "description": "用户名称",
                    "type": "string"
                },
                "userType": {
                    "description": "用户类型",
                    "type": "integer"
                }
            }
        }
    }
}